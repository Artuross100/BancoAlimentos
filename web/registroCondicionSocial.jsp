<%@page import="Entidades.CondicionSocial"%>
<%@page import="Entidades.Enfermedad"%>
<%@page import="java.util.ArrayList"%>
<%@page contentType="text/html" pageEncoding="UTF-8"%>
<jsp:useBean id="controlador" scope="session" class="Controller.Controlador"></jsp:useBean>
<%ArrayList<CondicionSocial> enf = controlador.listarCondicionSocial();%>
<div class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="row">
                <div class="col-md-8 col-md-offset-2 header">
                    <h4><ins>Registrar Condicion Social</ins></h4>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <form action="Registro/registrarCondicionSocial.jsp" method="post" >
                        <div class="form-group">
                            <label>Descripci√≥n</label>
                            <input type="text" class="form-control border-input" placeholder="Condicion Social" name="descripcion">
                        </div>
                        <button type="input" class="btn btn-info btn-fill btn-wd">REGISTRAR</button>
                    </form>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <h4><ins>Registros Disponibles</ins></h4>
                    <div class="content table-responsive table-full-width">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Condicion Social</th>
                                    <th>Fecha de registro</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%if (enf != null && !enf.isEmpty()) {
                                        for (CondicionSocial e : enf) {%>
                                <tr>
                                    <td><%=e.getDescripcion()%></td>
                                    <td><%=e.getFecha()%></td>
                                </tr>
                                <%}
                                    }%>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>